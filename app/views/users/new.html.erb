<h1>ユーザー登録ページ</h1>

<%= form_for(@user) do |f| %>
  <div>
    <%= f.label :name, 'name' %>
    <%= f.text_field :name %>
  </div>
  
  <div>
    <%= f.label :email, 'Email' %>
    <%= f.email_field :email %>
  </div>
  
  <div>  
    <%= f.label :password, 'Password' %>
    <%= f.password_field :password %>
  </div>
  
  <div>
    <%= f.label :password_confirmation, 'パスワード確認' %>
    <%= f.password_field :password_confirmation %>
  </div>
  
  <%= f.submit 'Sign up' %>
<% end %>